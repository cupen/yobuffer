package rpc

// 结构体定义
@meta(id=10001, desc="玩家信息", encoding=tiny)
struct PlayerInfo {
    string  userId  = 1;
    string  name    = 2;
    string  avatar  = 3;
    int64   shortId = 4;
    int16   level   = 5;
    float64 winRate = 6;
    bool    isAdmin = 7;
}

